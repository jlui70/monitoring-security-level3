# ===================================
# NÍVEL 2: STAGING ENVIRONMENT  
# ===================================
# Configuração para ambiente de homologação
# Senhas seguras e configurações próximas da produção

# Environment Configuration
ENVIRONMENT=staging
DEPLOY_TIMESTAMP=$(date '+%Y%m%d_%H%M%S')

# MySQL Configuration
MYSQL_VERSION=8.3
MYSQL_DATABASE=zabbix
MYSQL_USER=zabbix
MYSQL_PASSWORD=Stg_ZabbixSecure_2024#$
MYSQL_ROOT_PASSWORD=StgRoot_VerySecure_2024#$

# Additional MySQL users for security
MYSQL_EXPORTER_USER=exporter
MYSQL_EXPORTER_PASSWORD=StgExporter_Secure_2024#$

# Zabbix Configuration
ZABBIX_VERSION=alpine-7.0.5
DB_SERVER_HOST=127.0.0.1
ZBX_SERVER_HOST=127.0.0.1
PHP_TZ=America/Sao_Paulo
TZ=America/Sao_Paulo

# Zabbix Performance (Staging - medium values)
ZBX_STARTPOLLERS=4
ZBX_STARTPINGERS=2
ZBX_STARTUNREACHABLE=1
ZBX_STARTSNMPPOLLERS=10
ZBX_STARTTRAPPERS=3
ZBX_STARTDBSYNCERS=3
ZBX_TIMEOUT=25
ZBX_VALUECACHESIZE=512M
ZBX_HISTORYCACHESIZE=256M
ZBX_HISTORYINDEXCACHESIZE=128M
ZBX_CACHESIZE=1024M
ZBX_TRENDCACHESIZE=256M

# Grafana Configuration
GRAFANA_VERSION=12.0.2-security-01-ubuntu
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=StgAdmin_VerySecure_2024#$

# Prometheus Configuration
PROMETHEUS_VERSION=latest

# Security Settings (Staging)
ENABLE_DEBUG_LOGS=false
DISABLE_SSL_VERIFICATION=false
ALLOW_WEAK_PASSWORDS=false

# Backup & Retention (Staging)
BACKUP_RETENTION_DAYS=14
LOG_RETENTION_DAYS=7

# Load Testing Configuration
ENABLE_PERFORMANCE_MONITORING=true
MAX_CONCURRENT_CONNECTIONS=100