# ===================================
# NÍVEL 2: PRODUCTION ENVIRONMENT
# ===================================
# Configuração para ambiente de produção  
# Senhas altamente seguras e configurações otimizadas

# Environment Configuration
ENVIRONMENT=production
DEPLOY_TIMESTAMP=$(date '+%Y%m%d_%H%M%S')

# MySQL Configuration  
MYSQL_VERSION=8.3
MYSQL_DATABASE=zabbix
MYSQL_USER=zabbix
MYSQL_PASSWORD=Prod_ZabbixUltraSecure_2024!@#$
MYSQL_ROOT_PASSWORD=ProdRoot_UltraSecure_2024!@#$

# Additional MySQL users for security
MYSQL_EXPORTER_USER=exporter
MYSQL_EXPORTER_PASSWORD=ProdExporter_UltraSecure_2024!@#$

# Zabbix Configuration
ZABBIX_VERSION=alpine-7.0.5
DB_SERVER_HOST=127.0.0.1
ZBX_SERVER_HOST=127.0.0.1
PHP_TZ=America/Sao_Paulo
TZ=America/Sao_Paulo

# Zabbix Performance (Production - optimized values)
ZBX_STARTPOLLERS=8
ZBX_STARTPINGERS=3
ZBX_STARTUNREACHABLE=2
ZBX_STARTSNMPPOLLERS=20
ZBX_STARTTRAPPERS=5
ZBX_STARTDBSYNCERS=6
ZBX_TIMEOUT=20
ZBX_VALUECACHESIZE=1024M
ZBX_HISTORYCACHESIZE=512M
ZBX_HISTORYINDEXCACHESIZE=256M
ZBX_CACHESIZE=2048M
ZBX_TRENDCACHESIZE=512M

# Grafana Configuration
GRAFANA_VERSION=12.0.2-security-01-ubuntu
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=ProdAdmin_UltraSecure_2024!@#$

# Prometheus Configuration
PROMETHEUS_VERSION=latest

# Security Settings (Production)
ENABLE_DEBUG_LOGS=false
DISABLE_SSL_VERIFICATION=false
ALLOW_WEAK_PASSWORDS=false
FORCE_SSL=true
ENABLE_AUDIT_LOGS=true

# Backup & Retention (Production)  
BACKUP_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# Production Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MONITORING=true
MAX_CONCURRENT_CONNECTIONS=1000
ALERT_EMAIL=admin@company.com

# High Availability
ENABLE_CLUSTERING=false
ENABLE_REPLICATION=false