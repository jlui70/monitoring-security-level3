# ======================================
# MONITORING SECURITY - LEVEL 3
# Secrets Management com HashiCorp Vault
# ======================================

# Environment Configuration
ENVIRONMENT=development
PROJECT_NAME=monitoring-vault

# ======================================
# VAULT CONFIGURATION
# ======================================
VAULT_ROOT_TOKEN=vault-dev-root-token
VAULT_PORT=8200
VAULT_ADDR=http://vault:8200

# ======================================
# MYSQL CONFIGURATION
# ======================================
MYSQL_VERSION=8.3
MYSQL_DATABASE=zabbix
MYSQL_USER=zabbix
MYSQL_PASSWORD=Dev_Zabbix_Vault_2024!@
MYSQL_ROOT_PASSWORD=Dev_Root_Vault_2024!@

# MySQL Exporter
MYSQL_EXPORTER_USER=exporter
MYSQL_EXPORTER_PASSWORD=Dev_Exporter_Vault_2024!@

# ======================================
# ZABBIX CONFIGURATION
# ======================================
ZABBIX_VERSION=alpine-7.0.5
ZABBIX_ADMIN_PASSWORD=Dev_Admin_Vault_2024!@

# Zabbix Performance
ZBX_STARTPOLLERS=5
ZBX_STARTPINGERS=1
ZBX_STARTUNREACHABLE=1
ZBX_STARTSNMPPOLLERS=5
ZBX_STARTTRAPPERS=5
ZBX_STARTDBSYNCERS=4
ZBX_TIMEOUT=30
ZBX_VALUECACHESIZE=256M
ZBX_HISTORYCACHESIZE=128M
ZBX_HISTORYINDEXCACHESIZE=64M
ZBX_CACHESIZE=512M
ZBX_TRENDCACHESIZE=128M

# ======================================
# GRAFANA CONFIGURATION
# ======================================
GRAFANA_VERSION=12.0.2-security-01-ubuntu
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=Dev_Grafana_Vault_2024!@

# ======================================
# PROMETHEUS CONFIGURATION
# ======================================
PROMETHEUS_VERSION=latest
NODE_EXPORTER_VERSION=latest
MYSQL_EXPORTER_VERSION=latest

# ======================================
# NETWORK PORTS
# ======================================
GRAFANA_PORT=3000
ZABBIX_WEB_PORT=8080
PROMETHEUS_PORT=9090
NODE_EXPORTER_PORT=9100
MYSQL_EXPORTER_PORT=9104
MYSQL_PORT=3306

# ======================================
# TIMEZONE
# ======================================
PHP_TZ=America/Sao_Paulo
TZ=America/Sao_Paulo
